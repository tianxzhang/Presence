<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.0dp"
        android:background="#EEEFEF"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:paddingBottom="8dip"
        android:paddingTop="8dip"
        >
    <LinearLayout
        android:id="@+id/id_tab_playground"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/id_tab_playground_ico"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="3"
            android:background="#FFFFFFFF"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_playground_selected"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="2"
            android:gravity="bottom"
            android:text="@string/tab_playground"
            android:textColor="#9F9F9F"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_course"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/id_tab_course_ico"
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="3"
            android:background="#FFFFFFFF"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_course"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="2"
            android:gravity="bottom"
            android:textColor="#9F9F9F"
            android:textSize="12sp"
            android:text="@string/tab_course"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_tab_home"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:gravity="center"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/id_tab_home_ico"
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="3"
            android:background="#FFFFFFFF"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_home"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="2"
            android:textSize="12sp"
            android:textColor="#9F9F9F"
            android:gravity="bottom"
            android:text="@string/tab_home"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>