<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    >
    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_dialog_update_title"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="#FF0EB3EA"
            android:gravity="center"
            android:text="Update"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_dialog_update_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="#FFF6F6F6"
            android:minHeight="80dp"
            android:textColor="#FF737C83"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_update_right_now"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#FF0EB3EA"
                android:gravity="center"
                android:text="@string/update_now"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/tv_dialog_update_later"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="#FF0EB3EA"
                android:gravity="center"
                android:text="@string/update_later"
                android:textColor="#FFFFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>