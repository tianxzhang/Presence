<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_playground_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/fragment_playground_viewpager_dot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="8dip"
        android:gravity="right"
        >
        <View
            android:id="@+id/fragment_playground_viewpager_dot1"
            android:layout_width="4dip"
            android:layout_height="4dip"
            android:background="@drawable/dot_focus"/>
        <View
            android:id="@+id/fragment_playground_viewpager_dot2"
            android:layout_width="4dip"
            android:layout_height="4dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/dot_blur"/>
    </LinearLayout>
</RelativeLayout>